@namespace SFMDX
@attribute [StyleSheet("/ui/EditorHUD.scss")]
@inherits RootPanel

<root class="pointer-none">
	<!-- Slowly adding SFM elements to the UI -->

	<!-- Top menu bar -->
	<div class="menu-bar pointer-all">
		<text class="menu-bar-text">File</text>
		<text class="menu-bar-text">Edit</text>
		<text class="menu-bar-text">Windows</text>
		<text class="menu-bar-text">View</text>
		<text class="menu-bar-text">Scripts</text>
		<text class="menu-bar-text">Help</text>
	</div>

	<!-- Grid layout -->
	<div class="container pointer-all">
		<div class="element element-right-column element-full-height">
			<!-- Header -->
			<div class="tab-header">
				<text class="tab-header-text">Animation Set Editor</text>
			</div>
			<div class="inner-element">
				<text class="inner-element-text">This is the Animation Set Editor!</text>
			</div>
		</div>
		<div class="element element-left-column element-half-height element-top-half-height">
			<!-- Header -->
			<div class="tab-header">
				<text class="tab-header-text">Primary Viewport</text>
			</div>
			<div class="inner-element">
				<text class="inner-element-text">This is the Primary Viewport!</text>
			</div>
		</div>
		<div class="element element-left-column element-half-height element-bottom-half-height">
			<!-- Header -->
			<div class="tab-header">
				<text class="tab-header-text">Timeline</text>
			</div>
			<div class="inner-element">
				<text class="inner-element-text">This is the Timeline!</text>
			</div>
		</div>
	</div>

	<!-- Footer status bar -->
	<div class="footer pointer-all">
		<text class="footer-text">[ Source Filmmaker: Director's Cut by KiwifruitDev ]</text>
	</div>
	<chatbox></chatbox>
</root>
